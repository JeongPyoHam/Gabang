<Window x:Class="Gabang.TreeGridTest.GridWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gabang.TreeGridTest"
        xmlns:control="clr-namespace:Gabang.Controls;assembly=Gabang.Controls"
        mc:Ignorable="d"
        Title="GridWindow" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <control:DynamicGrid x:Name="VGrid"></control:DynamicGrid>

        <Button x:Name="ResetCollection"
                Grid.Row="1"
                Click="ResetCollection_Click">Reset Collection</Button>
    </Grid>
</Window>
